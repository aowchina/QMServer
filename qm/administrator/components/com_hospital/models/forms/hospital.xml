<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset name="myfields">
		<field name="id" type="text" default="0" label="ID" readonly="true" class="readonly" description="ID"/>

		<field name="name" type="text" class="inputbox" size="30" label="医院名称" description="医院名称" required="true"/>
		<field name="logo" type="media" size="30" label="LOGO" description="LOGO" required="true"/>

		<field name="pid" type="sql" default="0" label="所在省" description="所在省" required="true" query="select id as value, name as pid from #__province"/>
		<field name="cid" type="list" label="所在市" description="所在市" required="true"/>

		<field name="simg1" type="media" size="30" label="宣传图1" description="宣传图1"/>
		<field name="simg2" type="media" size="30" label="宣传图2" description="宣传图2"/>
		<field name="simg3" type="media" size="30" label="宣传图3" description="宣传图3"/>
		<field name="simg4" type="media" size="30" label="宣传图4" description="宣传图4"/>

		<field name="alimg1" type="media" size="30" label="案例图1" description="案例图1"/>
		<field name="alimg2" type="media" size="30" label="案例图2" description="案例图2"/>
		<field name="alimg3" type="media" size="30" label="案例图3" description="案例图3"/>

		<field name="intro" type="textarea" cols="30" rows="10" class="inputbox" label="医院简介" description="医院简介" required="true"/>
		
	</fieldset>
</form>
