<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset name="myfields">
		<field name="id" type="text" default="0" label="ID" readonly="true" class="readonly" description="ID"/>
		<field name="name" type="text" class="inputbox" size="30" label="名称" description="名称" required="true"/>
		<field name="fname" type="text" class="inputbox" size="30" label="前缀标题" description="前缀标题" required="true"/>
		<field name="oldval" type="text" class="inputbox" size="30" label="原价（单位：元）" description="原价" required="true"/>
		<field name="newval" type="text" class="inputbox" size="30" label="特惠价（单位：元）" description="特惠价" required="true"/>
		<field name="dj" type="text" class="inputbox" size="30" label="订金（单位：元）" description="订金" required="true"/>

		<field name="simg" type="media" size="30" label="小图" description="小图" required="true"/>
		<field name="bimg" type="media" size="30" label="大图" description="大图" required="true"/>

		<field name="tid" type="sql" default="0" label="所属类别" description="所属类别" query="select id as value, name as tid from #__tehui_type"/>
		<field name="hid" type="sql" default="0" label="所属医院" description="所属医院" query="select id as value, name as hid from #__hospital"/>
		<field name="pid" type="sql" default="0" label="所属项目" description="所属项目" query="select id as value, name as pid from #__project"/>

		<field name="intro" type="textarea" cols="30" rows="10" class="inputbox" label="特惠简介" description="特惠简介" required="true"/>

		<field name="detail" type="media" size="30" label="效果展示图" description="效果展示图" required="true"/>
	</fieldset>
</form>
